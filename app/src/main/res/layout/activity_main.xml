<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nedatatech.datatechportal.mainactivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

  <LinearLayout
      android:layout_width="395dp"
      android:layout_height="587dp"
      android:orientation="vertical"
      android:padding="20dp"
      android:weightSum="1"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <Button
        android:id="@+id/buttonCustomer"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:onClick="customerButton"
        android:text="@string/string_cusData"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/buttonTodo"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:onClick="todoButton"
        android:text="@string/string_toDo"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/buttonJob"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.12"
        android:onClick="jobButton"
        android:text="@string/string_jobData"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/buttonInventory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="inventoryButton"
        android:text="@string/string_invData"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/buttonCompany"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".25"
        android:onClick="companyButton"
        android:text="@string/string_companyPro"
        android:textAlignment="center"
        android:textStyle="bold"/>
    <Button
        android:id="@+id/buttonFunds"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".25"
        android:onClick="fundsButton"
        android:text="@string/string_funds"
        android:textAlignment="center"
        android:textStyle="bold"/>
  </LinearLayout>
</android.support.constraint.ConstraintLayout>
